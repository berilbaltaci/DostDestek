@using DostDestek.Entity
@using DostDestek.Repository
@model DostDestek.Entity.Post
@{
    Member mem = (Member)HttpContext.Current.Session["User"];
    ViewBag.Title = "NewPost";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 breadcrumbf">
                <a href="#">General Discussion</a> <span class="diviver">&gt;</span> <a href="#">New Topic</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <!-- POST -->
                <div class="post">
                    <form action="#" class="form newtopic" method="post">
                        <div class="topwrap">
                            <div class="userinfo pull-left">
                                <div class="avatar">
                                    <img src="images/avatar4.jpg" alt="" />
                                </div>
                            </div>
                            <div class="posttext pull-left">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-lg-6 col-md-6">
                                            @{
            TopicRepository tr = new TopicRepository();
            List<Topic> topList = tr.List().ProcessResult;
                                            }
                                            @Html.DropDownListFor(model => model.TopicId, new SelectList(topList, "TopicId", "TopicName"), "Select Topic")
                                        </div>

                                        <div class="col-lg-6 col-md-6">
                                            @{
            AnimalRepository ar = new AnimalRepository();
            List<Animal> anList = ar.List().ProcessResult;
                                            }
                                            @Html.DropDownListFor(model => model.AnimalId, new SelectList(anList, "AnimalId", "AnimalName"), "Select Animal")
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-6">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { placeholder = "Title" } })
                                </div>
                                <div class="col-lg-12 col-md-6">
                                    @Html.EditorFor(model => model.Post1, new { htmlAttributes = new { placeholder = "Post" } })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="postinfobot">
                            <div class="pull-right postreply">
                                <div class="pull-left"><button type="submit" class="btn btn-primary">Post</button></div>
                                <div class="clearfix"></div>
                            </div>


                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>